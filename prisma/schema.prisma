generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  email String @unique
  password String
  profilePicture String?
  createdAt DateTime @default(now())

  // Relation
  posts Post[]
  comments Comment[]
  likes Like[]

}

model Post {
  id String @id @default(uuid())
  image String?
  description String?
  tags String[]
  likesCount Int @default(0)
  createdAt DateTime @default(now())

  //Relation
  author User @relation(fields:[authorId], references:[id], onDelete:Cascade)
  authorId String
  comments Comment[]
  likes Like[]
}

model Comment{
  id String @id @default(uuid())
  content String
  createdAt DateTime @default(now())

  //Relation
  user User @relation(fields:[userId], references:[id], onDelete:Cascade)
  userId String
  post Post @relation(fields:[postId], references:[id], onDelete:Cascade)
  postId String
}

model Like{
  id String @id @default(uuid())
  createdAt DateTime @default(now())

  //Relation
  user User @relation(fields:[userId], references:[id], onDelete:Cascade)
  userId String
  post Post @relation(fields:[postId], references:[id], onDelete:Cascade)
  postId String
  
}

